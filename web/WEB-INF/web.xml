<?xml version="1.0" encoding="UTF-8"?>
<web-app version="5.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd">
    
    
    <servlet>
        <servlet-name>BuyControl</servlet-name>
        <servlet-class>controller.customer.BuyControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowControl</servlet-name>
        <servlet-class>controller.customer.ShowControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeControl</servlet-name>
        <servlet-class>controller.customer.HomeControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcessControl</servlet-name>
        <servlet-class>controller.customer.ProcessControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ThanhToanControl</servlet-name>
        <servlet-class>controller.customer.ThanhToanControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckoutControl</servlet-name>
        <servlet-class>controller.customer.CheckoutControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BuyControl</servlet-name>
        <url-pattern>/buy</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowControl</servlet-name>
        <url-pattern>/show</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeControl</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProcessControl</servlet-name>
        <url-pattern>/process</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ThanhToanControl</servlet-name>
        <url-pattern>/thanhtoan</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckoutControl</servlet-name>
        <url-pattern>/checkout</url-pattern>
    </servlet-mapping>
    
    <!--thêm đường dẫn-->
    
    
</web-app>
